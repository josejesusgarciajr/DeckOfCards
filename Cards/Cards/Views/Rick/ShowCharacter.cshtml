
@{
    ViewData["Title"] = Model.Name;
}

<div class="text-center">
    <h2 class="display-4">@Model.Name</h2>
</div>

<div class="container row">

    <div class="col-4">

        <div class="row">
            <code>Status: </code>
            <p class="lead">@Model.Status</p>
        </div>

        <div class="row">
            <code>Species: </code>
            <p class="lead">@Model.Species</p>
        </div>

        <div class="row">
            <code>Gender: </code>
            <p class="lead">@Model.Gender</p>
        </div>

        <div class="row">
            <code>Origin: </code>
            <p class="lead">@Model.Origin</p>
        </div>

    </div>


    <div class="col-8">
        <img src="@Model.Image"/>
    </div>

</div>